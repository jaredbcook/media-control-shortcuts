{
  "name": "media-control-shortcuts",
  "version": "0.1.0",
  "description": "Adds keyboard shortcuts to control media playback on any website. Compatible with most HTML5 video and audio players, including those inside Shadow DOMs and Iframes (where accessible).",
  "main": "content.js",
  "scripts": {
    "test": "vitest",
    "build": "node scripts/build.js",
    "release": "npm run build && node scripts/zip.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredbcook/media-control-shortcuts.git"
  },
  "keywords": [],
  "author": "Jared Cook",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jaredbcook/media-control-shortcuts/issues"
  },
  "homepage": "https://github.com/jaredbcook/media-control-shortcuts#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "archiver": "^7.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^11.3.3",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.17"
  }
}